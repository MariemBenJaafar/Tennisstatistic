{
  "openapi": "3.0.4",
  "info": {
    "title": "TennisStatistics.Api",
    "version": "1.0"
  },
  "paths": {
    "/api/Players": {
      "get": {
        "tags": [
          "Players"
        ],
        "summary": "Retrieves a list of all players.",
        "responses": {
          "200": {
            "description": "Returns the list of players"
          }
        }
      },
      "post": {
        "tags": [
          "Players"
        ],
        "summary": "Creates a new player.",
        "requestBody": {
          "description": "The data needed to create a new player.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePlayerDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePlayerDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePlayerDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "201": {
            "description": "Returns the newly created player"
          },
          "400": {
            "description": "If the input data is invalid"
          }
        }
      }
    },
    "/api/Players/{id}": {
      "get": {
        "tags": [
          "Players"
        ],
        "summary": "Get a player by their ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The unique ID of the player.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the player"
          },
          "404": {
            "description": "If the player is not found"
          }
        }
      },
      "put": {
        "tags": [
          "Players"
        ],
        "summary": "Update an existing player.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Player's ID.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "description": "Update player's data.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdatePlayerDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdatePlayerDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UpdatePlayerDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PlayerDto"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Players"
        ],
        "summary": "Delete an existing player.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "the Deleted Player's ID.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Stats/best-country": {
      "get": {
        "tags": [
          "Stats"
        ],
        "summary": "Gets the country with the highest win ratio.",
        "responses": {
          "200": {
            "description": "Returns the country with the best win ratio"
          }
        }
      }
    },
    "/api/Stats/average-imc": {
      "get": {
        "tags": [
          "Stats"
        ],
        "summary": "Gets the average IMC of all players.",
        "responses": {
          "200": {
            "description": "Returns the average IMC of players"
          }
        }
      }
    },
    "/api/Stats/median-height": {
      "get": {
        "tags": [
          "Stats"
        ],
        "summary": "Gets the median height of all players.",
        "responses": {
          "200": {
            "description": "Returns the median height of players"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreatePlayerDto": {
        "required": [
          "countryCode",
          "firstname",
          "lastname"
        ],
        "type": "object",
        "properties": {
          "firstname": {
            "type": "string",
            "nullable": true
          },
          "lastname": {
            "type": "string",
            "nullable": true
          },
          "shortname": {
            "type": "string",
            "nullable": true
          },
          "sex": {
            "type": "string",
            "nullable": true
          },
          "countryCode": {
            "type": "string",
            "nullable": true
          },
          "picture": {
            "type": "string",
            "nullable": true
          },
          "rank": {
            "type": "integer",
            "format": "int32"
          },
          "points": {
            "type": "integer",
            "format": "int32"
          },
          "weight": {
            "type": "integer",
            "format": "int32"
          },
          "height": {
            "type": "integer",
            "format": "int32"
          },
          "age": {
            "type": "integer",
            "format": "int32"
          },
          "last": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int32"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "PlayerDto": {
        "required": [
          "countryCode",
          "fullname"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "fullname": {
            "type": "string",
            "nullable": true
          },
          "countryCode": {
            "type": "string",
            "nullable": true
          },
          "rank": {
            "type": "integer",
            "format": "int32"
          },
          "points": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "UpdatePlayerDto": {
        "required": [
          "countryCode",
          "firstname",
          "lastname"
        ],
        "type": "object",
        "properties": {
          "firstname": {
            "type": "string",
            "nullable": true
          },
          "lastname": {
            "type": "string",
            "nullable": true
          },
          "countryCode": {
            "type": "string",
            "nullable": true
          },
          "rank": {
            "type": "integer",
            "format": "int32"
          },
          "points": {
            "type": "integer",
            "format": "int32"
          },
          "height": {
            "type": "integer",
            "format": "int32"
          },
          "weight": {
            "type": "integer",
            "format": "int32"
          },
          "age": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      }
    }
  }
}